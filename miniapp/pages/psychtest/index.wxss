.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 进度条样式 */
.progress-bar {
  margin-bottom: 40rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.progress-line {
  height: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #7BBFEA;
  transition: width 0.3s ease;
}

/* 问题卡片样式 */
.question-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.question-text {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 24rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s ease;
}

.option-item.selected {
  background-color: #7BBFEA;
  color: #fff;
}

/* 导航按钮样式 */
.navigation-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.nav-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  color: #666;
  border-radius: 40rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nav-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #7BBFEA;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

/* 结果卡片样式 */
.result-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.result-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.result-score {
  font-size: 60rpx;
  color: #7BBFEA;
  font-weight: bold;
}

.result-content {
  margin-bottom: 40rpx;
}

.result-level {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.restart-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #e67171;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.header {
  padding: 40rpx 30rpx;
  background-color: #e67171;
  color: #fff;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.test-list {
  padding: 20rpx;
}

.test-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.test-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.test-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.test-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.test-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.test-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}


.empty-icon {
  width: 600rpx;
  height: 600rpx;
  margin-bottom: 0rpx;
} 

/* 历史记录按钮样式 */
.history-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #e67171;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}