/* 心灵伴侣小程序主题样式文件 */

/* 颜色系统 */
page {
  /* 主色系 */
  --color-primary: #FF8F8F;
  --color-primary-light: #FFA7A7;
  --color-primary-dark: #E77979;
  
  /* 背景色 */
  --color-background: #FFF9F5;
  
  /* 强调色 */
  --color-accent: #6EB5FF;
  --color-accent-light: #8FC5FF;
  --color-accent-dark: #599AE0;
  
  /* 文本颜色 */
  --color-text-primary: #333333;
  --color-text-secondary: #666666;
  --color-text-tertiary: #999999;
  --color-text-light: #FFFFFF;
  
  /* 功能色 */
  --color-success: #67C23A;
  --color-warning: #E6A23C;
  --color-danger: #F56C6C;
  --color-info: #909399;
  
  /* 边框颜色 */
  --color-border: #EAEAEA;
  
  /* 阴影 */
  --shadow-card: 0 2px 8px rgba(0, 0, 0, 0.05);
  
  /* 字体 */
  --font-family: "PingFang SC", -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB", "Microsoft Yahei", sans-serif;
  
  /* 字号 */
  --font-size-title-large: 24px;
  --font-size-title: 20px;
  --font-size-subtitle: 18px;
  --font-size-content: 14px;
  --font-size-caption: 12px;
  
  /* 字重 */
  --font-weight-regular: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  
  /* 行高 */
  --line-height-compact: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.8;
  
  /* 间距 (基于8px栅格) */
  --spacing-xxs: 4px;
  --spacing-xs: 8px;
  --spacing-sm: 16px;
  --spacing-md: 24px;
  --spacing-lg: 32px;
  --spacing-xl: 40px;
  --spacing-xxl: 48px;
  
  /* 圆角 */
  --radius-small: 6px;
  --radius-medium: 12px;
  --radius-large: 16px;
  --radius-circle: 50%;
  
  /* 动画时间 */
  --animation-fast: 0.2s;
  --animation-normal: 0.3s;
  --animation-slow: 0.4s;
  
  /* 全局背景色 */
  background-color: var(--color-background);
} 